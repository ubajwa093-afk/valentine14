<script>
  let yesScale = 1;

  function noClicked() {
    yesScale += 0.3;
    document.getElementById("yesBtn").style.transform = `scale(${yesScale})`;
    const x = Math.random() * 30 - 15;
    const y = Math.random() * 30 - 15;
    document.getElementById("noBtn").style.transform = `translate(${x}px, ${y}px)`;
  }

